{
    "$schema": "https://biomejs.dev/schemas/2.3.7/schema.json",
    "vcs": {
        "enabled": false,
        "clientKind": "git",
        "useIgnoreFile": true
    },
    "files": {
        "ignoreUnknown": true,
        "includes": ["src/**"]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "lineWidth": 140,
        "indentWidth": 4
    },
    "linter": {
        "enabled": true,
        "domains": {
            "next": "all",
            "project": "all"
        },
        "rules": {
            "recommended": true,
            "correctness": {
                "useImportExtensions": "off",
                "noUnusedImports": {
                    "level": "error",
                    "fix": "safe"
                },
                "noUnusedVariables": {
                    "level": "error",
                    "fix": "safe"
                },
                "noUnusedFunctionParameters": {
                    "level": "error"                
                }
            },
            "suspicious": {
                "noExplicitAny": "off"
            },
            "style": {
                "noNonNullAssertion": "off"
            }
        }
    },
    "javascript": {
        "formatter": {
            "enabled": true,
            "quoteStyle": "single",
            "trailingCommas": "none",
            "semicolons": "always"
        },
        "parser": {
            "unsafeParameterDecoratorsEnabled": true
        }
    },
    "html": {
        "formatter": {
            "enabled": true
        }
    },
    "css": {
        "formatter": {
            "enabled": true
        }
    },
    "assist": {
        "enabled": true,
        "actions": {
            "source": {
                "organizeImports": "on",
                "useSortedAttributes": "on",
                "useSortedProperties": "on"
            }
        }
    }
}
